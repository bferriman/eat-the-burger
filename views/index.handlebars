<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>On a Plate</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class="devour-btn" data-id="{{id}}">Devour It!</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h2>In Your Belly</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<script>
  $(document).ready( function() {
    $(".devour-btn").on("click", function(event) {
      const id = $(this).data("id");
      console.log("burger id is " + id);
      const newDevouredState = {
        devoured: true
      };

      $.ajax("/api/burgers/" + id, {
        type: "PUT",
        data: newDevouredState
      }).then( () => {
        location.reload();
      });
    });
  });
</script>