<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>On a Plate</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class="devour-btn" data-id="{{id}}">Devour It!</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h2>In Your Belly</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h2>Place Your Order!</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="brgr">Burger Name:</label>
          <input type="text" id="brgr" name="name">
        </div>

        <button type="submit">Cook It</button>
      </form>
    </div>
  </div>
</div>

<script>
  $(document).ready( function() {
    $(".devour-btn").on("click", function(event) {
      const id = $(this).data("id");
      console.log("burger id is " + id);
      const newDevouredState = {
        devoured: true
      };

      $.ajax("/api/burgers/" + id, {
        type: "PUT",
        data: newDevouredState
      }).then( () => {
        location.reload();
      });
    });

    $(".create-form").on("submit", function(event) {
      event.preventDefault();

      const newBurger = {
        name: $("#brgr").val().trim(),
      };

      $.ajax("/api/burgers", {
        type: "POST",
        data: newBurger
      }).then( () => {
          location.reload();
      });
    });
  });
</script>